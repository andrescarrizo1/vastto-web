<style>
  .hero {
    background: linear-gradient(135deg, rgba(255,230,0,1) 0%, rgba(255,165,0,0.85) 100%), url('/favicon.svg') no-repeat center center/cover;
    background-blend-mode: overlay;
    padding: 6rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  .hero::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: radial-gradient(circle at center, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  .hero h1 {
    font-size: 3.5rem;
    font-weight: 800;
    color: #1a1a1a;
    margin: 0 0 1.25rem;
    line-height: 1.1;
    letter-spacing: -1px;
    text-shadow: 0 2px 10px rgba(0,0,0,0.05);
  }
  .hero p {
    font-size: 1.25rem;
    color: #333;
    margin-bottom: 2rem;
    font-weight: 500;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  .btn-hero {
    display: inline-block;
    background: #3483fa;
    color: #fff;
    text-decoration: none;
    padding: 1rem 2.5rem;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px rgba(52, 131, 250, 0.4);
  }
  .btn-hero:hover { 
    background: #2968c8; 
    transform: translateY(-2px);
    box-shadow: 0 12px 30px rgba(52, 131, 250, 0.5);
  }
  .categories {
    padding: 5rem 0;
    background: #ffffff;
  }
  .categories h2, .featured h2, .why-us h2 {
    font-size: 2.25rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    color: #1a1a1a;
    letter-spacing: -0.5px;
  }
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }
  .category-card {
    background: #fff;
    border-radius: 16px;
    padding: 2rem 1.5rem;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.04);
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    text-align: center;
    border: 1px solid rgba(0,0,0,0.02);
  }
  .category-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 15px 35px rgba(0,0,0,0.08);
    border-color: rgba(52, 131, 250, 0.1);
  }
  .cat-icon { 
    font-size: 3rem; 
    margin-bottom: 0.5rem;
    transition: transform 0.3s ease;
  }
  .category-card:hover .cat-icon {
    transform: scale(1.1);
  }
  .cat-name { font-weight: 700; color: #1a1a1a; font-size: 1.1rem; }
  .cat-count { color: #666; font-size: 0.85rem; font-weight: 500; }
  .featured { padding: 5rem 0; background: #fff; }
  .section-header { margin-bottom: 2.5rem; text-align: center; }
  .section-header h2 { margin-bottom: 0.5rem; }
  .section-header p { color: #666; font-size: 1.1rem; }
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }
  .why-us { padding: 5rem 0; background: #ffffff; border-top: 1px solid rgba(0,0,0,0.03); }
  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  .feature {
    background: #fff;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.04);
    text-align: center;
    transition: transform 0.3s ease;
  }
  .feature:hover {
    transform: translateY(-5px);
  }
  .feature-icon { font-size: 2.5rem; display: block; margin-bottom: 1rem; }
  .feature h3 { font-size: 1.1rem; font-weight: 700; color: #1a1a1a; margin-bottom: 0.75rem; }
  .feature p { font-size: 0.95rem; color: #666; line-height: 1.5; }
  
  @media (max-width: 992px) {
    .categories-grid { grid-template-columns: repeat(2, 1fr); }
    .features-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 768px) {
    .hero { padding: 4rem 0; }
    .hero h1 { font-size: 2.5rem; }
    .hero p { font-size: 1.1rem; }
    .products-grid { grid-template-columns: repeat(2, 1fr); gap: 1rem; }
  }
  @media (max-width: 480px) {
    .products-grid { grid-template-columns: 1fr; }
    .features-grid { grid-template-columns: 1fr; }
    .categories-grid { grid-template-columns: 1fr; }
  }
</style>
