---
import { addAffiliateParam } from '../utils/affiliate';

interface Props {
  title: string;
  price: number;
  originalPrice?: number;
  image: string;
  url: string;
  badge?: string;
  rating?: number;
  reviews?: number;
  freeShipping?: boolean;
}

const {
  title,
  price,
  originalPrice,
  image,
  url,
  badge,
  rating = 0,
  reviews = 0,
  freeShipping = false,
} = Astro.props;

const discount = originalPrice
  ? Math.round(((originalPrice - price) / originalPrice) * 100)
  : 0;

const formattedPrice = new Intl.NumberFormat('es-AR', {
  style: 'currency',
  currency: 'ARS',
  maximumFractionDigits: 0,
}).format(price);

const formattedOriginal = originalPrice
  ? new Intl.NumberFormat('es-AR', {
      style: 'currency',
      currency: 'ARS',
      maximumFractionDigits: 0,
    }).format(originalPrice)
  : null;

const affiliateUrl = addAffiliateParam(url);

// Generar JSON-LD estructurado para SEO
const schema = {
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": title,
  "image": new URL(image, Astro.site || Astro.url).toString(),
  "offers": {
    "@type": "Offer",
    "url": affiliateUrl,
    "priceCurrency": "ARS",
    "price": price,
    "itemCondition": "https://schema.org/NewCondition",
    "availability": "https://schema.org/InStock",
    "seller": {
      "@type": "Organization",
      "name": "Mercado Libre"
    }
  },
  ...(rating > 0 && reviews > 0 ? {
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": rating,
      "reviewCount": reviews
    }
  } : {})
};
---

<article class="product-card">
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  {badge && <span class="badge">{badge}</span>}
  <a href={affiliateUrl} target="_blank" rel="noopener sponsored" class="card-link">
    <div class="card-image">
      <img src={image} alt={title} loading="lazy" />
    </div>
    <div class="card-body">
      <h3 class="card-title">{title}</h3>
      {rating > 0 && (
        <div class="rating">
          <span class="stars">{'★'.repeat(Math.round(rating))}</span>
          <span class="reviews">({reviews})</span>
        </div>
      )}
      <div class="card-pricing">
        {formattedOriginal && (
          <span class="original-price">{formattedOriginal}</span>
        )}
        <span class="price">{formattedPrice}</span>
        {discount > 0 && (
          <span class="discount">-{discount}% OFF</span>
        )}
      </div>
      {freeShipping && (
        <span class="free-shipping">&#10003; Envio gratis</span>
      )}
      <p class="stock-warning">⚡ Stock Limitado - Consultar Disponibilidad</p>
      <button class="btn-buy">Ver Precio con Descuento</button>
    </div>
  </a>
</article>

<style>
  .product-card {
    background: #fff;
    border-radius: 16px;
    border: 1px solid rgba(0,0,0,0.04);
    box-shadow: 0 4px 15px rgba(0,0,0,0.03);
    overflow: hidden;
    position: relative;
    transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .product-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.08);
    border-color: rgba(52, 131, 250, 0.15);
  }
  .product-card:hover .btn-buy {
    background: #2968c8;
    box-shadow: 0 4px 12px rgba(52, 131, 250, 0.3);
  }
  .product-card:hover .card-image img {
    transform: scale(1.05);
  }
  .badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: #FFE600;
    color: #1a1a1a;
    font-size: 0.75rem;
    font-weight: 800;
    padding: 4px 10px;
    border-radius: 6px;
    z-index: 2;
    text-transform: uppercase;
    box-shadow: 0 2px 8px rgba(255, 230, 0, 0.3);
  }
  .card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  .card-image {
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    background: #fff;
    padding: 1rem;
    border-bottom: 1px solid rgba(0,0,0,0.02);
  }
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.4s ease;
  }
  .card-body {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    background: #ffffff;
  }
  .card-title {
    font-size: 0.95rem;
    line-height: 1.4;
    margin: 0 0 0.75rem;
    color: #1a1a1a;
    font-weight: 600;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: 2.8rem;
  }
  .rating {
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
  }
  .stars { color: #3483fa; letter-spacing: 1px; }
  .reviews { color: #888; margin-left: 6px; font-weight: 500; }
  .card-pricing {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
    margin-top: auto;
  }
  .original-price {
    text-decoration: line-through;
    color: #999;
    font-size: 0.85rem;
    font-weight: 500;
  }
  .price {
    font-size: 1.4rem;
    font-weight: 800;
    color: #1a1a1a;
    letter-spacing: -0.5px;
  }
  .discount {
    color: #00a650;
    font-size: 0.8rem;
    font-weight: 700;
  }
  .free-shipping {
    color: #00a650;
    font-size: 0.85rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 4px;
    margin-bottom: 1rem;
  }
  .stock-warning {
    font-size: 0.75rem;
    color: #f73f05;
    font-weight: 700;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 4px;
  }
  .btn-buy {
    width: 100%;
    background: #3483fa;
    color: #fff;
    border: none;
    border-radius: 8px;
    padding: 0.75rem 1rem;
    font-weight: 700;
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 0.5rem;
  }
</style>
